ul.token-input-list {
	overflow: hidden; 
	height: auto !important; 
	height: 1%;
	width: 100%;
	padding: 4px 0;
	background-color: #fff;
	box-sizing: border-box;
	cursor: text;    
	z-index: 999;
	margin: 0;
	background-color: #fff;
	list-style-type: none;
	clear: left;
	min-height: 30px;
	font-size: 0;
}

ul.token-input-list li {
	list-style-type: none;
	display: inline-block;
}
ul.token-input-list * {
	vertical-align: top;
}

ul.token-input-list li input {
	border: 0;
	width: 350px;
	padding: 3px 6px 2px;
	background-color: white;
	-webkit-appearance: caret;
	font-size: 12px;
}

li.token-input-token {
	position: relative;
	display: inline-block;
	height: 22px;	
	padding: 0 23px 0 12px;
	background-color: #ebf1fc;
	border-radius: 22px 22px;
	color: #5a79ec;
	box-sizing: border-box;
	margin:2px 2px 0 0;
	max-width: 190px;
    cursor: pointer;
}
.modify li.token-input-token {
	position: relative;
	display: inline-block;
	height: 22px;	
	padding: 0 43px 0 12px;
	background-color: #ebf1fc;
	border-radius: 22px 22px;
	color: #5a79ec;
	box-sizing: border-box;
}
li.token-input-token.invalid {
	position: relative;
	display: inline-block;
	height: 22px;		
	background-color: #ffeeee;
	border-radius: 22px 22px;
	color: #ff5959;
	box-sizing: border-box;
}

.token-input-token p {
	display: inline-block;
	max-width:100%;
	height: 22px;
	line-height: 22px;
	font-size: 12px;	
	text-overflow: ellipsis;
	white-space: nowrap;	
	overflow: hidden;
    padding-top: 0 !important;
}
.token-input-delete-token { 
	position:absolute;
	top:7px;
	right:10px;
	display: inline-block;
	width: 8px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_btn_del.png') no-repeat 0 0;
	font-size: 0 !important;
	vertical-align: top;}
li.token-input-token.invalid .token-input-delete-token { 
	position:absolute;
	top:7px;
	right:10px;
	display: inline-block;
	width: 8px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_invalid_btn_del.png') no-repeat 0 0;
	font-size: 0;
	vertical-align: top;}
.token-input-modi-token { 
	position:absolute;
	top:7px;
	right:26px;
	display: inline-block;
	width: 8px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_btn_modify.png') no-repeat 0 0;
	font-size: 0;}
li.token-input-token.invalid .token-input-modi-token { 
	position:absolute;
	top:7px;
	right:26px;
	display: inline-block;
	width: 8px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_invalid_btn_modify.png') no-repeat 0 0;
	font-size: 0;}
.token-input-eye-token {
	position:absolute;
	top:7px;
	right:26px;
	display: inline-block;
	width: 12px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_btn_eye.png') no-repeat 0 0;
	font-size: 0;}
li.token-input-token.invalid .token-input-eye-token { 
	position:absolute;
	top:7px;
	right:26px;
	display: inline-block;
	width: 12px;
	height: 8px;
	background: url('../img/token-input/jquery_tokeninput_invalid_btn_modify.png') no-repeat 0 0;
	font-size: 0;}


li.token-input-token span {
	float: right;
	color: #777;
	cursor: pointer;
}

li.token-input-selected-token {
	background-color: #5a79ec;
	color: #fff;
}

li.token-input-selected-token span {
	color: #bbb;
}

div.token-input-dropdown {
	position: absolute;
	width: 400px;
	background-color: #fff;
	overflow: hidden;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	cursor: default;
	font-size: 12px;
	z-index: 99999;
}

div.token-input-dropdown p {
	margin: 0;
	padding: 5px;
	font-weight: bold;
	color: #777;
}

div.token-input-dropdown ul {
	margin: 0;
	padding: 0;
}

div.token-input-dropdown ul li {
	background-color: #fff;
	padding: 3px;
	list-style-type: none;
}

div.token-input-dropdown ul li.token-input-dropdown-item {
	background-color: #fafafa;
}

div.token-input-dropdown ul li.token-input-dropdown-item2 {
	background-color: #fff;
}

div.token-input-dropdown ul li em {
	font-weight: bold;
	font-style: normal;
}

div.token-input-dropdown ul li.token-input-selected-dropdown-item {
	background-color: #ebf1fc;
}

.token-input a.btn_manager_add {}
.token-input.border { width:calc(100% - 28px); border: 1px solid #e3e3e3;}
.token-input.border ul.token-input-list {min-height: 28px; padding:2px;}
.input_group .token-input.border .ico_btn {right:-2px; top:6px;}