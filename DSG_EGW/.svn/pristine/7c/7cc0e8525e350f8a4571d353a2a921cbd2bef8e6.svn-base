<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta charset="utf-8" />
<title>HANDY GROUPWARE</title>
<link type="text/css" rel="stylesheet" href="../../css/common.css" />
<script type="text/javascript" src="../../js/jquery-latest.min.js"></script>
<script type="text/javascript" src="../../js/common.js"></script>
</head>
<body>
<div class="pop_wrap">
  <div class="container_box">
    <div class="title_area">
      <h1>휴일 추가</h1>
    </div>    
    <!-- 리스팅 기본형(좌측) -->
    <div class="cmmt_pop" style="height: 700px;">
      <div class="detail_form">
        <!-- 휴일명 start --> 
        <dl>
          <dt><span class="tit">휴일명<em class="req">*</em></span></dt>
          <dd>
            <input type="text" class="basic_inp" style="width:150px">
            <label class="pd_rgt_10" class="pd_rgt_10"><input type="checkbox">양력</label>
          </dd>
        </dl>
        <!-- //휴일명 end --> 
        <!-- 기간 start --> 
        <dl>
          <dt><span class="tit">기간<em class="req">*</em></span></dt>
          <dd>
              <div class="datepic_box">
                <input type="text" class="basic_inp" value="2014.03.02" style="width:102px;" readonly>
                <a href="#" class="btn_date"><img src="../../img/btn_datepicker.gif" alt="달력"></a> </div>
              ~
              <div class="datepic_box">
                <input type="text" class="basic_inp" value="2014.03.02" style="width:102px;" readonly>
                <a href="#" class="btn_date"><img src="../../img/btn_datepicker.gif" alt="달력"></a> </div>
          </dd>
        </dl>
        <!-- //기간 end --> 
        <!-- 내용 start --> 
        <dl>
          <dt><span class="tit">내용</span></dt>
          <dd>
            <textarea cols="3" rows="3" class="commt_detail_textarea"></textarea>
          </dd>
        </dl>
        <!-- //내용 end --> 
      
    </div>
    <!-- // 메일 리스팅 기본형(좌측) --> 
    <!-- 하단 버튼 영역 -->
    <div class="footer">
      <ul class="btns">
        <li><span><a href="#" class="fnt_bold">확인</a></span></li>
        <!-- 포인트 버튼 fnt_bold 클래스 추가 -->
        <li><span><a href="#">취소</a></span></li>
      </ul>
    </div>
    <!-- // 하단 버튼 영역 -->
  </div>
</div>
</body>
</html>
