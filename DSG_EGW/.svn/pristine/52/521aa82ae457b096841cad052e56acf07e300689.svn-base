.url_preview {
	position: relative;
	overflow: hidden;
	display: table;
	table-layout: fixed;
	width: 100%;
	min-height: 90px;
	font-size: 0;
	border: 1px solid #e5e5e5;
	background: #fdfdfd;
	max-width: 500px;
}

.url_preview_span {
	position: relative;
	overflow: hidden;
	display: table-cell;
	width: 90px;
	height: 90px;
	padding: 0;
	font-size: 0;
	line-height: 0px !important;
	vertical-align: middle;
}

.url_image {
	width: 100%;
	height: auto;
}

.url_info {
	display: table-cell;
	width: 100%;
	padding: 0 14px 0 16px;
	vertical-align: middle;
	line-height: 0px !important;
}

.url_info .url_title {
	display: inline-block;
	overflow: hidden;
	max-width: 100%;
	white-space: nowrap;
	word-break: normal;
	word-wrap: normal;
	text-overflow: ellipsis;
	width: 100%;
	font-size: 14px;
	font-weight: 700;
	line-height: 1.5;
	color: #333;
}

.url_info .url_desc {
	display: inline;
	overflow: hidden;
	max-width: 100%;
	white-space: nowrap;
	word-break: normal;
	word-wrap: normal;
	text-overflow: ellipsis;
	width: 100%;
	margin-top: 4px;
	font-size: 12px;
	color: #777;
}

.url_info .url_domain {
	display: inline-block;
	overflow: hidden;
	max-width: 100%;
	white-space: nowrap;
	word-break: normal;
	word-wrap: normal;
	text-overflow: ellipsis;
	width: 100%;
	margin-top: 7px;
	font-size: 12px;
	line-height: 1.5;
	color: #aaa;
}